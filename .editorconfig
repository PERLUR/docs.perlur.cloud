# editorconfig.org
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
insert_final_newline = true

[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false
indent_size = 2

[.github/dependabot.yml]
trim_trailing_whitespace = true
indent_size = 2
